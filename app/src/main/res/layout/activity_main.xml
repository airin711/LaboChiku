<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/activity_main"
    android:rowCount="5"
    android:columnCount="2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:id="@+id/spendtimeView"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="40sp"
        android:gravity="center" />

    <TextView
        android:layout_width="739dp"
        android:layout_height="147dp"
        android:id="@+id/ap_info"
        android:layout_row="1"
        android:layout_column="1"
        android:textSize="30sp"
        android:gravity="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_row="2"
        android:layout_column="0"
        android:background="#00ffffff"
        android:layout_columnSpan="2">

        <TextView
            android:layout_width="68dp"
            android:layout_height="317dp"
            android:text="時間 (h)\n\n24h\n\n\n\n\n12h\n\n\n\n\n0"
            android:id="@+id/graph_text2"
            android:layout_gravity="left|center_vertical"
            android:gravity="right"
            android:textSize="18sp" />

        <com.echo.holographlibrary.LineGraph
            android:layout_width="563dp"
            android:layout_height="215dp"
            android:id="@+id/graph"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="392dp"
            android:layout_height="53dp"
            android:text="一週間のらぼちく時間"
            android:id="@+id/graph_text1"
            android:layout_gravity="center_horizontal|top"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="592dp"
            android:layout_height="51dp"
            android:id="@+id/graph_text3"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="18sp" />
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Wifi Data"
        android:id="@+id/setup_button"
        android:layout_row="4"
        android:layout_column="1" />

</GridLayout>
